generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String              @id @default(uuid())
  email             String              @unique
  emailVerified     DateTime?
  displayName       String?
  name              String?
  avatarUrl         String?
  image             String?
  plan              Plan                @default(FREE)
  stripeCustomerId  String?
  language          String              @default("ja")
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  settings          Json                @default("{}")
  accounts          Account[]
  sessions          Session[]
  relationships     Relationship[]
  subscriptions     Subscription[]
  transactions      Transaction[]
  pushSubscriptions PushSubscription[]
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Plan {
  FREE
  STANDARD
  PREMIUM
}

model Character {
  id                String         @id @default(uuid())
  name              String
  nameEn            String?
  slug              String         @unique
  franchise         String
  franchiseEn       String?
  description       String?
  systemPrompt      String         @db.Text
  voiceModelId      String?
  live2dModelId     String?
  loraModelId       String?
  ragCollectionId   String?
  catchphrases      String[]
  personalityTraits Json           @default("[]")
  avatarUrl         String?
  coverUrl          String?
  isActive          Boolean        @default(true)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  relationships     Relationship[]
  moments           Moment[]
}

model Relationship {
  id               String         @id @default(uuid())
  userId           String
  characterId      String
  level            Int            @default(1)
  experiencePoints Int            @default(0)
  totalMessages    Int            @default(0)
  firstMessageAt   DateTime?
  lastMessageAt    DateTime?
  memorySummary    Json           @default("{}")
  milestones       Json           @default("[]")
  isFollowing      Boolean        @default(false)
  isFanclub        Boolean        @default(false)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  user             User           @relation(fields: [userId], references: [id])
  character        Character      @relation(fields: [characterId], references: [id])
  conversations    Conversation[]

  @@unique([userId, characterId])
}

model Conversation {
  id             String       @id @default(uuid())
  relationshipId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  metadata       Json         @default("{}")
  relationship   Relationship @relation(fields: [relationshipId], references: [id])
  messages       Message[]
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  role           MessageRole
  content        String       @db.Text
  audioUrl       String?
  imageUrl       String?
  metadata       Json         @default("{}")
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

enum MessageRole {
  USER
  CHARACTER
  SYSTEM
}

model Moment {
  id            String     @id @default(uuid())
  characterId   String
  type          MomentType
  content       String?    @db.Text
  mediaUrl      String?
  visibility    Visibility @default(PUBLIC)
  levelRequired Int        @default(0)
  scheduledAt   DateTime?
  publishedAt   DateTime?
  createdAt     DateTime   @default(now())
  character     Character  @relation(fields: [characterId], references: [id])
  reactions     Reaction[]
}

enum MomentType {
  TEXT
  IMAGE
  AUDIO
  VIDEO
}

enum Visibility {
  PUBLIC
  STANDARD
  PREMIUM
  LEVEL_LOCKED
}

model Reaction {
  id        String   @id @default(uuid())
  momentId  String
  userId    String
  type      String   @default("like")
  createdAt DateTime @default(now())
  moment    Moment   @relation(fields: [momentId], references: [id])

  @@unique([momentId, userId, type])
}

model Subscription {
  id                   String    @id @default(uuid())
  userId               String
  plan                 Plan
  stripeSubscriptionId String?   @unique
  status               SubStatus @default(ACTIVE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  canceledAt           DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  user                 User      @relation(fields: [userId], references: [id])
}

enum SubStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
}

model Transaction {
  id                    String   @id @default(uuid())
  userId                String
  characterId           String?
  type                  TxType
  amount                Int
  currency              String   @default("jpy")
  stripePaymentIntentId String?
  metadata              Json     @default("{}")
  createdAt             DateTime @default(now())
  user                  User     @relation(fields: [userId], references: [id])
}

enum TxType {
  TIP
  PPV
  GIFT
  CALL_EXTRA
}

model VerificationCode {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
}
