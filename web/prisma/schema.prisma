generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     String                  @id @default(uuid())
  email                  String                  @unique
  emailVerified          DateTime?
  displayName            String?
  name                   String?
  avatarUrl              String?
  image                  String?
  plan                   Plan                    @default(FREE)
  stripeCustomerId       String?
  language               String                  @default("ja")
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  settings               Json                    @default("{}")
  // === オンボーディングフィールド ===
  nickname               String?
  onboardingStep         String?                 // 'nickname' | 'character_select' | 'first_chat' | 'completed'
  onboardingCompletedAt  DateTime?
  notificationPermission Boolean?
  onboardingCharacterId  String?
  onboardingDeeplinkSlug String?
  accounts               Account[]
  sessions               Session[]
  relationships          Relationship[]
  subscriptions          Subscription[]
  transactions           Transaction[]
  pushSubscriptions      PushSubscription[]
  coinBalance            CoinBalance?
  coinTransactions       CoinTransaction[]
  characterSubscriptions CharacterSubscription[]
  momentComments         MomentComment[]
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Plan {
  FREE
  STANDARD
  PREMIUM
}

model Character {
  id                String         @id @default(uuid())
  name              String
  nameEn            String?
  slug              String         @unique
  franchise         String
  franchiseEn       String?
  description       String?
  systemPrompt      String         @db.Text
  voiceModelId      String?
  live2dModelId     String?
  loraModelId       String?
  ragCollectionId   String?
  catchphrases      String[]
  personalityTraits Json           @default("[]")
  avatarUrl         String?
  coverUrl          String?
  isActive                Boolean                 @default(true)
  // === 課金設定 ===
  fcMonthlyPriceJpy       Int                     @default(3480)   // FC月額（円）最低3480
  fcIncludedCallMin       Int                     @default(30)     // FC込み通話時間（分/月）
  callCoinPerMin          Int                     @default(200)    // 非FC通話料金（コイン/分）最低200
  fcOverageCallCoinPerMin Int                     @default(100)    // FC超過通話料金（コイン/分）最低100
  freeMessageLimit        Int                     @default(10)     // 無料チャット上限（通数）
  freeCallMinutes         Int                     @default(5)      // 無料通話上限（分）
  stripeProductId         String?                                  // Stripe Product ID
  fcSubscriberCount       Int                     @default(0)      // FC加入者数キャッシュ
  onboardingGreetings     Json?                   @default("[]")   // オンボーディング第一声（3パターン）
  // === 多言語・地域対応 ===
  // localeConfig: { "en": { voiceModelId, systemPrompt, catchphrases[], toneNotes }, "ko": {...} }
  localeConfig            Json?                   @default("{}")   // 言語別の声優/口調/プロンプト設定
  birthday                String?                                  // "MM-DD" format e.g. "05-05" for May 5th
  createdAt               DateTime                @default(now())
  updatedAt               DateTime                @updatedAt
  relationships           Relationship[]
  moments                 Moment[]
  momentComments          MomentComment[]
  characterSubscriptions  CharacterSubscription[]
}

model Relationship {
  id               String         @id @default(uuid())
  userId           String
  characterId      String
  level            Int            @default(1)
  experiencePoints Int            @default(0)
  totalMessages    Int            @default(0)
  firstMessageAt   DateTime?
  lastMessageAt    DateTime?
  memorySummary    Json           @default("{}")
  milestones       Json           @default("[]")
  isFollowing      Boolean        @default(false)
  isFanclub            Boolean        @default(false)
  characterEmotion     String         @default("neutral")
  characterEmotionNote String?
  emotionUpdatedAt     DateTime?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  user             User           @relation(fields: [userId], references: [id])
  character        Character      @relation(fields: [characterId], references: [id])
  conversations    Conversation[]

  @@unique([userId, characterId])
}

model Conversation {
  id             String       @id @default(uuid())
  relationshipId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  metadata       Json         @default("{}")
  relationship   Relationship @relation(fields: [relationshipId], references: [id])
  messages       Message[]
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  role           MessageRole
  content        String       @db.Text
  audioUrl       String?
  imageUrl       String?
  metadata       Json         @default("{}")
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

enum MessageRole {
  USER
  CHARACTER
  SYSTEM
}

model Moment {
  id            String     @id @default(uuid())
  characterId   String
  type          MomentType
  content       String?    @db.Text
  mediaUrl      String?
  visibility    Visibility @default(PUBLIC)
  levelRequired Int        @default(0)
  scheduledAt   DateTime?
  publishedAt   DateTime?
  createdAt     DateTime   @default(now())
  character     Character  @relation(fields: [characterId], references: [id])
  reactions     Reaction[]
  comments      MomentComment[]
}

enum MomentType {
  TEXT
  IMAGE
  AUDIO
  VIDEO
}

enum Visibility {
  PUBLIC
  STANDARD
  PREMIUM
  LEVEL_LOCKED
}

model Reaction {
  id        String   @id @default(uuid())
  momentId  String
  userId    String
  type      String   @default("like")
  createdAt DateTime @default(now())
  moment    Moment   @relation(fields: [momentId], references: [id])

  @@unique([momentId, userId, type])
}

model MomentComment {
  id          String     @id @default(uuid())
  momentId    String
  userId      String?
  characterId String?
  content     String     @db.Text
  createdAt   DateTime   @default(now())
  moment      Moment     @relation(fields: [momentId], references: [id], onDelete: Cascade)
  user        User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  character   Character? @relation(fields: [characterId], references: [id])
}

model Subscription {
  id                   String    @id @default(uuid())
  userId               String
  plan                 Plan
  stripeSubscriptionId String?   @unique
  status               SubStatus @default(ACTIVE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  canceledAt           DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  user                 User      @relation(fields: [userId], references: [id])
}

enum SubStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
}

model Transaction {
  id                    String   @id @default(uuid())
  userId                String
  characterId           String?
  type                  TxType
  amount                Int
  currency              String   @default("jpy")
  stripePaymentIntentId String?
  metadata              Json     @default("{}")
  createdAt             DateTime @default(now())
  user                  User     @relation(fields: [userId], references: [id])
}

enum TxType {
  TIP
  PPV
  GIFT
  CALL_EXTRA
}

model VerificationCode {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
}

model CoinBalance {
  id        String   @id @default(uuid())
  userId    String   @unique
  balance   Int      @default(0)
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CoinTransaction {
  id           String     @id @default(uuid())
  userId       String
  type         CoinTxType
  amount       Int
  balanceAfter Int
  characterId  String?
  refId        String?
  description  String?
  metadata     Json       @default("{}")
  createdAt    DateTime   @default(now())
  user         User       @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([refId])
}

enum CoinTxType {
  PURCHASE
  CALL_OVERAGE
  CHAT_EXTRA
  GIFT_SENT
  GIFT_RECEIVED
  ITEM_PURCHASE
  REFUND
  BONUS
  ADMIN_ADJUST
}

model CharacterSubscription {
  id                   String          @id @default(uuid())
  userId               String
  characterId          String
  stripeSubscriptionId String?         @unique
  status               SubStatus       @default(ACTIVE)
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  pricePaidJpy         Int
  callMinutesRemaining Int             @default(0)
  callMinutesTotal     Int             @default(0)
  platform             PaymentPlatform @default(WEB)
  canceledAt           DateTime?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  user                 User            @relation(fields: [userId], references: [id])
  character            Character       @relation(fields: [characterId], references: [id])

  @@unique([userId, characterId, status])
  @@index([userId])
  @@index([characterId])
}

enum PaymentPlatform {
  WEB
  IOS
  ANDROID
}

model CoinPackage {
  id            String   @id @default(uuid())
  name          String
  coinAmount    Int
  priceWebJpy   Int
  priceStoreJpy Int
  stripePriceId String?
  isActive      Boolean  @default(true)
  sortOrder     Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
